{
  "manifest_version": 3,
  "name": "ConfuSense",
  "version": "4.1.0",
  "description": "Real-time confusion detection for online learning",
  "author": "SE Group 06 - Subgroup 11",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://meet.google.com/*",
    "https://confusensetest.onrender.com/*",
    "https://*.onrender.com/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "ConfuSense"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": [
        "extension/socket.io.min.js",
        "extension/dom-parser.js",
        "extension/confusion-model.js",
        "extension/ui-injector.js",
        "extension/main.js"
      ],
      "css": ["extension/styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "models/*"],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}